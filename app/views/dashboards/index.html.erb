<div class="row">
  <div class="col-md-6">
    <div class="big-box">
      <h2>Residents who has paid maintenance this month</h2>
      <ul class="list-group text-center">
      <% @paid_residents.each do |income|%>
      <%# binding.pry %>
        <a class="list-group-item" href="<%= resident_path(income.resident.id) %>" target="_blank"><%= income.resident.name %>, Amount: <%= income.amount %>, Date: <%= income.date_time.to_date %> by <%= income.payment_type.name %></a>
      <% end %>
      </ul>
    </div>
  </div>
  <div class="col-md-6">
    <div class="big-box">
      <h2>Residents who has not paid maintenance this month</h2>
      <ul class="list-group text-center">
      <% unless @unpaid_residents.nil? || @unpaid_residents == 0 %>
        <% @unpaid_residents.each do |resident|%>
          <a class="list-group-item" href="<%= resident_path(resident.id) %>" target="_blank"><%= resident.name %></a>
        <% end %>
      <% else %>
        <a class="list-group-item">None</a>
      <% end %>
      </ul>
    </div>
  </div>
</div>