<%= form_for(account) do |f| %>
  <% if account.errors.any? %>
    <div class="alert">
      <div class="row">
        <div class="col s12">
          <div class="card-panel red">
            <span class="white-text">         
              <div id="error_explanation">
                <h6><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h6>

                <ul>
                <% account.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            </span>
          </div>
        </div>
      </div>
    </div>      
  <% end %>

  <div class="field">
    <%= f.label :balance %>
    <%= f.text_field :balance %>
  </div>

  <div class="field">
    <%= f.label :withdraw %>
    <%= f.text_field :withdraw %>
  </div>

  <div class="field">
    <%= f.label :deposit %>
    <%= f.text_field :deposit %>
  </div>

  <div class="field">
    <%= f.label :trans_for %>
    <%= f.number_field :trans_for %>
  </div>

  <div class="field">
    <%= f.label :trans_type %>
    <%= f.text_field :trans_type %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.datetime_select :date %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
